{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"]  // 루트의 설정을 참조하도록 경로 설정
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
